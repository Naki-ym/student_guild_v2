<div class="form-wrapper">
  <h1>ログイン</h1>
  <%= form_with model: @user, url: user_session_path, local: true do |f| %>
    <div class="form">
      <div class="form-item">
        <h2>ユーザー名</h2>
        <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "textbox" %>
      </div>
    
      <div class="form-item">
        <h2>パスワード</h2>
        <%= f.password_field :password, autocomplete: "current-password", class: "textbox" %>
      </div>
    
      <% if devise_mapping.rememberable? %>
        <div class="form-item">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>
    
      <div class="btns">
        <%= f.submit "ログイン", class: "btn" %>
      </div>
    </div>
  <% end %>
  
  <%= render "devise/shared/links" %>
</div>