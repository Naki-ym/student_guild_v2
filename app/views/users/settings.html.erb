<div class="wrapper">
  <div class="page-top-btns">
    <%= link_to("/users/#{current_user.id}", class: "page-back") do %>
      <i class="fas fa-angle-left"></i>
      <p>戻る</p>
    <% end %>
  </div>
  <h1>設定</h1>
  <ul class="btn-list">
    <% if current_user.admin? || current_user.id == 1 %>
      <li>
        <label>
          <%= link_to "/admin" do %>
            <i class="fas fa-tools"></i>
            <p>管理画面</p>
          <% end %>
        </label>
      </li>
    <% end %>
    <li>
      <label>
        <%= link_to "/users/edit" do %>
          <i class="fas fa-user-cog"></i>
          <p>アカウント情報の編集</p>
        <% end %>
      </label>
    </li>
    <li class="redtext">
      <%= link_to(destroy_user_session_path, data: { confirm: "本当にログアウトしますか？" }, method: :delete) do %>
        <i class="fas fa-sign-out-alt"></i>
        <p>ログアウト</p>
      <% end %>
    </li>
    <li class="redtext">
      <%= link_to(user_registration_path, data: { confirm: "本当にアカウントを削除しますか？" }, method: :delete) do %>
        <i class="fas fa-user-slash"></i>
        <p>アカウントを削除</p>
      <% end %>
    </li>
  </ul>
</div>