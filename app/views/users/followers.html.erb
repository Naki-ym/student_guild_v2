<div class="wrapper">
  <div class="page-top-btns">
    <%= link_to("/users/#{@user.id}", class: "page-back") do %>
      <i class="fas fa-angle-left"></i>
      <p>戻る</p>
    <% end %>
  </div>
  <div class="follows_followers_tab">
    <%= link_to("/users/#{@user.id}/follows") do %>
      <p>フォロー <%= @user.following_user.count %></p>
    <% end %>
    <%= link_to("/users/#{@user.id}/followers", class: "target") do %>
      <p>フォロワー <%= @user.follower_user.count %></p>
    <% end %>
  </div>
  <h1>フォロワー</h1>
  <div class="user-list">
    <% if @users.size > 0 %>
      <% @users.each do |user| %>
        <div class="user-tile">
          <%= link_to("/users/#{user.id}") do %>
            <% if user.icon? %>
              <%= image_tag user.icon.url, class:"usericon" %>
            <% else %>
              <%= image_tag "icon.png", class: "usericon" %>
            <% end %>
            <p><%= user.name %></p>
          <% end %>
        </div>
      <% end %>
    <% else %>
      <p>フォロワーはいません</p>
    <% end %>
  </div>
</div>