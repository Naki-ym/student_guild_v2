<span class="ham-btn">
  <i></i>
  <i></i>
  <i></i>
</span>
<nav class="ham">
  <ul class="ham-menu">
    <li class="ham-menu-li"><%= link_to("< プロジェクト一覧", "/projects") %></li>
    <li class="ham-menu-li"><%= link_to("トップ", "/projects/#{params[:project_id]}") %></li>
    <li class="ham-menu-li"><%= link_to("掲示板", "/projects/#{params[:project_id]}/project_posts") %></li>
    <li class="ham-menu-li"><%= link_to("案件", "/projects/#{params[:project_id]}/recruitments") %></li>
  </ul>
</nav>

<div class="two-col-wrapper">
  <section class="two-col-left">
    <div class="fixed">
      <div class="menu">
        <ul class="menu-list">
          <li><%= link_to("< プロジェクト一覧", "/projects") %></li>
          <li><%= link_to("トップ", "/projects/#{params[:project_id]}") %></li>
          <li><%= link_to("掲示板", "/projects/#{params[:project_id]}/project_posts") %></li>
          <li><%= link_to("案件", "/projects/#{params[:project_id]}/recruitments") %></li>
        </ul>
      </div>
    </div>
  </section>
  <section class="two-col-right">
    <div class="box-top-area bottom-space">
      <%= link_to("/projects/#{params[:project_id]}/affiliations/new", class: "text-btn") do %>
        <i class="fas fa-plus"></i>
        <p>追加</p>
      <% end %>
    </div>
    <ul class="user-list">
      <% if @project.users.size > 0 %>
        <% @project.users.each do |user| %>
          <li class="user-tile">
            <% p "---------------------##" %>
            <% p @project %>
            <% p user.affiliation(@project) %>
            <%= link_to("/projects/#{@project.id}/affiliations/#{user.affiliation(@project).id}") do %>
              <% if user.icon? %>
                <%= image_tag user.icon.url, class:"usericon" %>
              <% else %>
                <%= image_tag "icon.png", class: "usericon" %>
              <% end %>
              <p><%= user.name %></p>
            <% end %>
          </li>
        <% end %>
      <% else %>
        <p>ユーザーはいません</p>
      <% end %>
    </ul>
  </section>
</div>
<%= javascript_pack_tag 'hamburger' %>