<div class="form-wrapper">
  <h1>新規トークルーム作成</h1>
  <%= form_tag("/chats") do %>
    <div class="form">
      <div class="form-item">
        <h2>グループ名</h2>
        <input name="name" value="<%= @room.name %>" class="textbox">
      </div>
      <div class="form-item">
        <h2>招待するユーザー</h2>
        <div class="user-list">
          <ul>
            <% @users.each do |user| %>
              <li>
                <input type="checkbox" id="checkbox<%= user.id %>" name="users[]" value="<%= user.id %>">
                <label for="checkbox<%= user.id %>"><%= user.name %></label>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
    <div class="btns">
      <input type="submit" value="新規登録" class="btn">
    </div>
  <% end %>
</div>