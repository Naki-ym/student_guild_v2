<div class="not-scroll">
  <div class="projects-wrapper">
    <section class="projects-left">
      <div class="fixed">
        <div class="menu">
          <ul class="menu-list">
            <li><%= link_to("マイプロジェクト", "projects/myprojects", {class: "list-btn"}) %></li>
            <li><%= link_to("すべて", "/projects", {class: "menu-list-textbtn"}) %></li>
            <% @categories.each do |category| %>
              <details>
                <summary><%= category.name %></summary>
                <ul>
                  <% category.tags.each do |tag| %>
                    <li><%= link_to(tag.name, "/projects?tag=#{tag.id}") %></li>
                  <% end %>
                </ul>
              </details>
            <% end %>
          </ul>
        </div>
      </div>
    </section>
    <section class="projects-right">
      <% if params[:tag] %>
        <h1>「<%= @tag.name %>」タグのついたプロジェクト</h1>
      <% end %>
      <div class="projects-bord">
        <% @projects.each do |project| %>
          <%= link_to("/projects/#{project.id}", class: "project-box") do %>
            <% if project.image? %>
              <%= image_tag project.image.url, class:"project-img" %>
            <% else %>
              <%= image_tag "image.png", class: "project-img" %>
            <% end %>
            <div class="content">
              <% if project.user.icon? %>
                <%= image_tag project.user.icon.url, class:"small-usericon" %>
              <% else %>
                <%= image_tag "icon.png", class: "small-usericon" %>
              <% end %>
              <div class="details">
                <h2><%= project.name %></h2>
                <p class="target"><span class="fas fa-search"></span><%= project.target %></p>
                <p class="overview"><%= project.overview %></p>
              </div>
            </div>
          <% end %>
        <% end %>
        <div>
        </div>
        <div>
        </div>
      </div>
    </section>
  </div>
</div>