<span class="ham-btn">
  <i></i>
  <i></i>
  <i></i>
</span>
<nav class="ham">
  <ul class="ham-menu">
    <li class="ham-menu-li"><%= link_to("< 戻る", "/projects") %></li>
    <li class="ham-menu-li"><%= link_to("新規プロジェクト", "/projects/new", {class: "list-btn"}) %></li>
    <li class="ham-menu-li"><%= link_to("すべて", "/projects/myprojects") %></li>
    <li class="ham-menu-li"><%= link_to("公開済み", "/projects/myprojects?is_published=true") %></li>
    <li class="ham-menu-li"><%= link_to("未公開", "/projects/myprojects?is_published=false") %></li> 
  </ul>
</nav>

<div class="projects-wrapper">
  <section class="projects-left">
    <div class="fixed">
      <div class="menu">
        <ul class="menu-list">
          <li><%= link_to("< 戻る", "/projects") %></li>
          <li><%= link_to("新規プロジェクト", "/projects/new", {class: "list-btn"}) %></li>
          <li><%= link_to("すべて", "/projects/myprojects") %></li>
          <li><%= link_to("公開済み", "/projects/myprojects?is_published=true") %></li>
          <li><%= link_to("未公開", "/projects/myprojects?is_published=false") %></li> 
        </ul>
      </div>
    </div>
  </section>
  <section class="projects-right">
    <h1>マイプロジェクト</h1>
    <div class="projects-bord">
      <% @projects.each do |project| %>
        <%= link_to("/projects/#{project.id}", class: "project-box") do %>
          <% if project.image? %>
            <%= image_tag project.image.url, class: "project-img" %>
          <% else %>
            <%= image_tag "image.png", class: "project-img" %>
          <% end %>
          <div class="content">
            <div class="details">
              <h2><%= project.name %></h2>
              <p class="target"><span class="fas fa-search"></span><%= project.target %></p>
              <p class="overview"><%= project.overview %></p>
            </div>
          </div>
        <% end %>
      <% end %>
      <div>
      </div>
      <div>
      </div>
    </div>
  </section>
</div>

<%= javascript_pack_tag 'hamburger' %>